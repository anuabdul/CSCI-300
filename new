    <script>
        function selectMeal(mealType) {
            if (mealType === 'breakfast') {
                document.getElementById('firstPage').style.display = 'none';
                document.getElementById('breakfastPage').style.display = 'block';
                document.getElementById('dinnerPage').style.display = 'none';
            } else if (mealType === 'dinner') {
                document.getElementById('firstPage').style.display = 'none';
                document.getElementById('breakfastPage').style.display = 'none';
                document.getElementById('dinnerPage').style.display = 'block';
            } else if (mealType === 'reviews') {
                window.location.href = 'reviews.html';
            } else if (mealType === 'home') {
                document.getElementById('firstPage').style.display = 'block';
                document.getElementById('breakfastPage').style.display = 'none';
                document.getElementById('dinnerPage').style.display = 'none';
            } else if (mealType.startsWith('showBreakfastIngredients')) {
                var index = mealType.slice(-1);
                document.getElementById('breakfastIngredients' + index).style.display = 'block';
            } else if (mealType.startsWith('showDinnerIngredients')) {
                var index = mealType.slice(-1);
                document.getElementById('dinnerIngredients' + index).style.display = 'block';
            }
        }
    </script>
</head>

